<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors occured
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do|f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  <%= link_to "show", book_path(@book.id) %>
  <%= link_to "Back", '/books' %>

<% end %>