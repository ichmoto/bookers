<h1>Books</h1>

<table class="table">
  <thead>
      <th>Title</th>
      <th>Body</th>
      <th colspab="3"></th>
  </thead>

<tbody>
<% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to "Show", book_path(book.id) %></td>
  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
  <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure you want to delete this Postï¼Ÿ" %></td>

</tr>
<% end %>
</tbody>

</table>

<h1>New Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors occured
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>